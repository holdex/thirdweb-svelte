{
	"name": "@holdex/thirdweb-svelte",
	"version": "1.0.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run package",
		"preview": "vite preview",
		"package": "tailwindcss -i src/app.css -o index.css --minify && svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"index.css"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"css": "./index.css"
		},
		"./index.css": "./index.css"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/@holdex"
	},
	"pnpm": {
		"overrides": {
			"elliptic": "^6.6.1"
		}
	},
	"overrides": {
		"elliptic": "^6.6.1"
	},
	"peerDependencies": {
		"@tanstack/svelte-query": "^5.66.0",
		"svelte": "^4.0.0 || ^5.0.0",
		"thirdweb": "^5.0.0",
		"vaul-svelte": "^0.3.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@lucide/svelte": "^0.482.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tanstack/svelte-query": "^5.83.0",
		"@types/node": "^24.1.0",
		"abitype": "^1.0.8",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^1.8.0",
		"eruda": "^3.4.3",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^15.15.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.2.12",
		"svelte": "^5.37.1",
		"svelte-check": "^4.3.0",
		"svelte-sonner": "^1.0.5",
		"tailwind-scrollbar": "^3.1.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.17",
		"thirdweb": "^5.105.25",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vaul-svelte": "^0.3.2",
		"vite": "^7.0.6"
	},
	"dependencies": {
		"@jimmyverburgt/svelte-input-otp": "^0.0.3",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.534.0",
		"mipd": "^0.0.7",
		"svelte-media-queries": "^1.6.2",
		"tailwind-merge": "^2.6.0",
		"uqr": "^0.1.2"
	}
}
