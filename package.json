{
	"name": "@holdex/thirdweb-svelte",
	"version": "0.2.13",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run package",
		"preview": "vite preview",
		"package": "tailwindcss -i src/app.css -o index.css --minify && svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"index.css"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"css": "./index.css"
		},
		"./index.css": "./index.css"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/@holdex"
	},
	"pnpm": {
		"overrides": {
			"elliptic": "^6.6.1"
		}
	},
	"overrides": {
		"elliptic": "^6.6.1"
	},
	"peerDependencies": {
		"@tanstack/svelte-query": "^5.66.0",
		"svelte": "^4.0.0 || ^5.0.0",
		"thirdweb": "^5.0.0",
		"vaul-svelte": "^0.3.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tanstack/svelte-query": "^5.66.0",
		"@types/node": "^22.13.4",
		"abitype": "^1.0.8",
		"autoprefixer": "^10.4.20",
		"eruda": "^3.4.1",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.2.12",
		"svelte": "^4.2.19",
		"svelte-check": "^4.1.4",
		"tailwind-scrollbar": "^3.1.0",
		"tailwindcss": "^3.4.17",
		"thirdweb": "^5.88.4",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0",
		"vaul-svelte": "^0.3.2",
		"vite": "^5.4.14"
	},
	"dependencies": {
		"@jimmyverburgt/svelte-input-otp": "^0.0.3",
		"bits-ui": "^0.22.0",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.464.0",
		"mipd": "^0.0.7",
		"mode-watcher": "^0.5.1",
		"svelte-media-queries": "^1.6.2",
		"svelte-sonner": "^0.3.28",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"uqr": "^0.1.2"
	}
}
